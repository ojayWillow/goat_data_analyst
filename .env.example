# Environment Configuration
# Copy to .env and update with your values

# Application
APP_DEBUG=false
APP_LOG_LEVEL=INFO

# Database
DATABASE_URL=sqlite:///data/analyst.db
DATABASE_ECHO=false

# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# UI
UI_THEME=light
UI_LAYOUT=wide

# Data
DATA_UPLOAD_DIR=data/uploads
DATA_MAX_FILE_SIZE=100MB

# Agents
AGENT_TIMEOUT=300
AGENT_MAX_RETRIES=3
AGENT_RETRY_DELAY=5

# Optional: API Keys for external services
# OPENAI_API_KEY=your_key_here
# ANTHROPIC_API_KEY=your_key_here
